{
	"name": "studiokit-auth-js",
	"version": "2.0.0",
	"scripts": {
		"tslint-check": "tslint-config-prettier-check ./tslint.json",
		"lint:core": "tslint -c tslint.json -p tsconfig.json",
		"lint": "yarn lint:core 'src/**/*.{ts,tsx}'",
		"fix": "yarn lint --fix",
		"test": "jest",
		"coverage": "jest --coverage",
		"coveralls": "npm run coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
		"clean": "rimraf ./lib",
		"build": "yarn clean && tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json -w",
		"prepublishOnly": "yarn build"
	},
	"description": "Authentication flow for Studio apps at Purdue",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"repository": "purdue-tlt/studiokit-auth-js",
	"license": "MIT",
	"files": [
		"lib"
	],
	"devDependencies": {
		"@types/jest": "^24.0.11",
		"coveralls": "^3.0.3",
		"cross-env": "^5.2.0",
		"husky": "^1.3.1",
		"jest": "^24.5.0",
		"lint-staged": "^8.1.5",
		"prettier": "^1.16.4",
		"rimraf": "^2.6.3",
		"ts-jest": "^24.0.0",
		"tslint": "^5.14.0",
		"tslint-config-prettier": "^1.18.0",
		"tslint-plugin-prettier": "^2.0.1",
		"typescript": "^3.3.3333"
	},
	"dependencies": {
		"@redux-saga/types": "^1.0.2",
		"@types/node": "^11.11.3",
		"redux": "^4.0.1",
		"redux-saga": "^1.0.2",
		"studiokit-net-js": "3.x"
	},
	"prettier": {
		"parser": "typescript",
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 4,
		"semi": false,
		"singleQuote": true,
		"printWidth": 100,
		"jsxBracketSameLine": true
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run test"
		}
	},
	"lint-staged": {
		"*.ts": [
			"yarn lint:core --fix",
			"git add"
		]
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		}
	}
}
